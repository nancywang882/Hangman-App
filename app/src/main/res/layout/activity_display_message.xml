<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFFFF"
    android:orientation="vertical"
    tools:context="com.example.nancy.hangman.DisplayMessageActivity">

    <ImageView
        android:id="@+id/gallows"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="40dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/gallow" />

    <ImageView
        android:id="@+id/head"
        android:layout_width="91dp"
        android:layout_height="0dp"
        android:layout_marginBottom="118dp"
        android:layout_marginTop="44dp"
        app:layout_constraintBottom_toTopOf="@+id/letters"
        app:layout_constraintHorizontal_bias="0.583"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/head1" />

    <ImageView
        android:id="@+id/body"
        android:layout_width="59dp"
        android:layout_height="86dp"
        android:layout_marginTop="76dp"
        app:layout_constraintHorizontal_bias="0.56"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@+id/head"
        app:srcCompat="@drawable/body" />

    <ImageView
        android:id="@+id/arm1"
        android:layout_width="70dp"
        android:layout_height="58dp"
        android:layout_marginBottom="316dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/body"
        app:srcCompat="@drawable/arm1" />

    <ImageView
        android:id="@+id/arm2"
        android:layout_width="61dp"
        android:layout_height="46dp"
        android:layout_marginStart="15dp"
        app:layout_constraintBottom_toBottomOf="@+id/arm1"
        app:layout_constraintEnd_toEndOf="@+id/head"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/body"
        app:layout_constraintTop_toTopOf="@+id/arm1"
        app:layout_constraintVertical_bias="1.0"
        app:srcCompat="@drawable/arm2" />

    <ImageView
        android:id="@+id/leg1"
        android:layout_width="70dp"
        android:layout_height="60dp"
        android:layout_marginBottom="304dp"
        android:layout_marginEnd="3dp"
        android:layout_marginStart="6dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/body"
        app:layout_constraintStart_toStartOf="@+id/arm1"
        app:layout_constraintTop_toBottomOf="@+id/head"
        app:srcCompat="@drawable/leg1" />

    <ImageView
        android:id="@+id/leg2"
        android:layout_width="0dp"
        android:layout_height="63dp"
        android:layout_marginTop="29dp"
        app:layout_constraintEnd_toEndOf="@+id/body"
        app:layout_constraintStart_toStartOf="@+id/body"
        app:layout_constraintTop_toTopOf="@+id/arm1"
        app:srcCompat="@drawable/leg2" />

    <LinearLayout
        android:id="@+id/word"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="#FFFFFFFF"
        android:gravity="center"
        android:orientation="horizontal"
        android:padding="10dp"
        app:layout_constraintBottom_toBottomOf="@+id/gallows"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"></LinearLayout>

    <GridView
        android:id="@+id/letters"
        android:layout_width="348dp"
        android:layout_height="189dp"
        android:layout_gravity="center"
        android:layout_marginBottom="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginStart="16dp"
        android:background="#FFFFFFFF"
        android:horizontalSpacing="1dp"
        android:numColumns="6"
        android:stretchMode="columnWidth"
        android:verticalSpacing="1dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/head" />


</android.support.constraint.ConstraintLayout>
